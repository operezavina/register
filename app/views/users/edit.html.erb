<% provide(:title, "Edit user") %>
<h1>Update profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        Last updated: <%= distance_of_time_in_words(Time.now, @user.updated_at)+ ' ago' %>

        <%= f.label :level %>
        <%= f.text_field :level %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :last %>
        <%= f.text_field :last %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :company %>
        <%= f.text_field :company %>

        <%= f.label :address %>
        <%= f.text_field :address %>

        <%= f.label :zip %>
        <%= f.text_field :zip %>

        <%= f.label :phone %>
        <%= f.text_field :phone %>

        <%= f.label :fax %>
        <%= f.text_field :fax %>

        <%= f.label :description %>
        <%= f.text_field :description %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>

         <%= f.label :admin %>
         <%= f.check_box :admin %><br><hr>


        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>